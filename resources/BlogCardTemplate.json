{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "size": "Large",
            "weight": "Bolder",
            "text": "${title}"
        },
        {
            "type": "Image",
            "url": "${image_url}",
            "altText": "image",
            "$data": "hvh"
        },
        {
            "type": "TextBlock",
            "text": "${description}",
            "wrap": true
        },
        {
            "type": "TextBlock",
            "text": "${organisation}",
            "wrap": true,
            "weight": "Bolder",
            "horizontalAlignment": "Left"
        }
    ],
    "actions": [
        {
            "type": "Action.OpenUrl",
            "title": "View",
            "url": "${content_link}"
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.6"
}